    </RadioGroup>


    <!--Question 5-->
    <TextView
        android:id="@+id/questionFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:text="@string/question5" />

    <CheckBox
        android:id="@+id/q5cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/q5cb1" />

    <CheckBox
        android:id="@+id/q5cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/q5cb2" />

    <CheckBox
        android:id="@+id/q5cb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/q5cb3" />

    <CheckBox
        android:id="@+id/q5cb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/q5cb4" />


    <!--Question 6-->
    <TextView
        android:id="@+id/question6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:text="@string/question6" />

    <EditText
        android:id="@+id/answer6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_text"
        android:inputType="text"
        android:textSize="16sp" />


    <!--just to give a gap-->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="16dp" />

    <!--Submit and Reset buttons-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButtton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:onClick="resetQuiz"
            android:text="@string/resetButton"
            android:textSize="16sp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/resetButtton"
            android:layout_alignBottom="@+id/resetButtton"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:onClick="scoreQuiz"
            android:text="@string/submitButton"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
</ScrollView>
