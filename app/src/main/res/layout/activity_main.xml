            android:textSize="16sp"
            android:text="@string/q3rb1" />

        <RadioButton
            android:id="@+id/q3rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="16sp"
            android:text="@string/q3rb2" />

        <RadioButton
            android:id="@+id/q3rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
